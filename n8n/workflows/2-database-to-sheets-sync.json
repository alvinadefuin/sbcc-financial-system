{
  "name": "Database to Google Sheets Sync",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "hoursInterval": 1
            }
          ]
        }
      },
      "id": "schedule-trigger",
      "name": "Schedule Every Hour",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [240, 300]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "={{ $env.SBCC_API_URL }}/api/webhooks/collections-for-sheets",
        "authentication": "none",
        "options": {
          "queryParameters": {
            "parameters": [
              {
                "name": "secret",
                "value": "={{ $env.WEBHOOK_SECRET || 'change-this-secret' }}"
              },
              {
                "name": "limit",
                "value": "100"
              }
            ]
          }
        }
      },
      "id": "fetch-collections",
      "name": "Fetch Collections from DB",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [460, 220]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "={{ $env.SBCC_API_URL }}/api/webhooks/expenses-for-sheets",
        "authentication": "none",
        "options": {
          "queryParameters": {
            "parameters": [
              {
                "name": "secret",
                "value": "={{ $env.WEBHOOK_SECRET || 'change-this-secret' }}"
              },
              {
                "name": "limit",
                "value": "100"
              }
            ]
          }
        }
      },
      "id": "fetch-expenses",
      "name": "Fetch Expenses from DB",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [460, 380]
    },
    {
      "parameters": {
        "operation": "clear",
        "documentId": {
          "__rl": true,
          "mode": "list",
          "value": ""
        },
        "sheetName": {
          "__rl": true,
          "mode": "list",
          "value": "Collections"
        },
        "clear": {
          "clearType": "allData"
        }
      },
      "id": "clear-collections-sheet",
      "name": "Clear Collections Sheet",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4.4,
      "position": [680, 220]
    },
    {
      "parameters": {
        "operation": "appendOrUpdate",
        "documentId": {
          "__rl": true,
          "mode": "list",
          "value": ""
        },
        "sheetName": {
          "__rl": true,
          "mode": "list",
          "value": "Collections"
        },
        "columns": {
          "mappingMode": "autoMapInputData",
          "matchingColumns": ["id"]
        },
        "options": {}
      },
      "id": "update-collections-sheet",
      "name": "Update Collections Sheet",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4.4,
      "position": [900, 220]
    },
    {
      "parameters": {
        "operation": "clear",
        "documentId": {
          "__rl": true,
          "mode": "list",
          "value": ""
        },
        "sheetName": {
          "__rl": true,
          "mode": "list",
          "value": "Expenses"
        },
        "clear": {
          "clearType": "allData"
        }
      },
      "id": "clear-expenses-sheet",
      "name": "Clear Expenses Sheet",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4.4,
      "position": [680, 380]
    },
    {
      "parameters": {
        "operation": "appendOrUpdate",
        "documentId": {
          "__rl": true,
          "mode": "list",
          "value": ""
        },
        "sheetName": {
          "__rl": true,
          "mode": "list",
          "value": "Expenses"
        },
        "columns": {
          "mappingMode": "autoMapInputData",
          "matchingColumns": ["id"]
        },
        "options": {}
      },
      "id": "update-expenses-sheet",
      "name": "Update Expenses Sheet",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4.4,
      "position": [900, 380]
    }
  ],
  "connections": {
    "Schedule Every Hour": {
      "main": [
        [
          {
            "node": "Fetch Collections from DB",
            "type": "main",
            "index": 0
          },
          {
            "node": "Fetch Expenses from DB",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch Collections from DB": {
      "main": [
        [
          {
            "node": "Clear Collections Sheet",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Clear Collections Sheet": {
      "main": [
        [
          {
            "node": "Update Collections Sheet",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch Expenses from DB": {
      "main": [
        [
          {
            "node": "Clear Expenses Sheet",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Clear Expenses Sheet": {
      "main": [
        [
          {
            "node": "Update Expenses Sheet",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  },
  "tags": []
}
