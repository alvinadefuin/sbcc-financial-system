# n8n Configuration
# Copy this to .env and update with your values

# Authentication
N8N_USER=admin
N8N_PASSWORD=your-secure-password-here

# Host Configuration (Railway will provide this)
N8N_HOST=sbcc-n8n.railway.app
WEBHOOK_URL=https://sbcc-n8n.railway.app

# Encryption Key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=generate-a-random-32-char-hex-string-here

# Your API Configuration
SBCC_API_URL=https://sbcc-financial-system-production.up.railway.app
SBCC_API_KEY=optional-api-key-if-you-add-one

# Database Backup Configuration
NEON_DATABASE_URL=postgresql://user:password@host/database
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@sbcc.church
